// fonts
@font-face
  font-family 'Roboto Mono'
  font-style normal
  font-weight 300
  src local('Roboto Mono Light'), local('RobotoMono-Light'), url(https://fonts.gstatic.com/s/robotomono/v4/N4duVc9C58uwPiY8_59Fz9TIkQYohD4BpHvJ3NvbHoA.woff2) format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215

@font-face
  font-family 'Roboto Mono'
  font-style normal
  font-weight 500
  src: local('Roboto Mono Medium'), local('RobotoMono-Medium'), url(https://fonts.gstatic.com/s/robotomono/v4/N4duVc9C58uwPiY8_59Fz3JuJo8UJJfpGKt7pXjBv4s.woff2) format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215

// basic
body
  font-weight 300
  font-size 12px
  font-family 'Roboto Mono', monospace

a
  color black

div.highlight
  font-weight inherit
  font-size inherit

.active
  color white
  background-color black

div.gist > div.gist-file
  border-width 0  !important
  > .gist-data table.highlight td,span
    font-family monospace !important
    font-weight 300
    color black !important
    &.pl-k
      font-weight bold
      color black
  > .gist-meta
    background-color transparent
    font-family monospace

// main
body
  min-width 420px
  display flex
  flex-direction column
  padding 1em

body > header
  font-weight 500
  font-size 3em
  margin 1em auto
  text-align center

  a
    text-decoration none
    padding 0.1em 0.4em
    user-select: none

body > nav
  margin 1em
  display flex
  align-items center
  justify-content center

  a
    margin 0 1em
    padding 0.1em 0.4em
    font-size 1.5em
    text-decoration none
    text-transform uppercase
    user-select: none

body > main
  max-width 800px
  margin 2em auto
  width 100%

  #blurb
    margin 2em 0

  article
    border-left 2px solid black
    font-size 1.1em
    &.review
      margin 1em 0
      padding 1em
      header
        font-weight 500
        display flex
        flex-direction row
        div.rating
          margin-left auto
      main
        margin 1em 0 0 0