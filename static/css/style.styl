@import "typebase.styl"
@import "vars.styl"
@import "code.styl"
@import "pagination.styl"

// fonts
@font-face
  font-family 'Roboto Mono'
  font-style normal
  font-weight 300
  src local('Roboto Mono Light'), local('RobotoMono-Light'), url(https://fonts.gstatic.com/s/robotomono/v4/N4duVc9C58uwPiY8_59Fz9TIkQYohD4BpHvJ3NvbHoA.woff2) format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215

@font-face
  font-family 'Roboto Mono'
  font-style normal
  font-weight 500
  src local('Roboto Mono Medium'), local('RobotoMono-Medium'), url(https://fonts.gstatic.com/s/robotomono/v4/N4duVc9C58uwPiY8_59Fz3JuJo8UJJfpGKt7pXjBv4s.woff2) format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215

.fade
  color var(--foreground-03, rgba(foreground, 0.3))

.tag
  &.draft
    color red
    background-color transparent
    border-color red
    margin-left 0.5em
  text-decoration none
  padding 0 0.2em
  border 1px solid var(--foreground, foreground)
  font-weight 500

.tags
  margin 0 0.5em

hr
  width 100%
  border-style none
  border-bottom 1px solid var(--foreground, foreground)

body
  min-height 100vh
  box-sizing border-box
  min-width 420px

  > header
    margin 4em auto 1em auto

    > h1
      margin 0
      > a
        padding 0.1em 0.4em
        user-select: none

  > nav
    margin 1em
    display flex
    justify-content center

    > a
      margin 0 1em
      padding 0.1em 0.4em
      font-size 1.5em
      user-select: none

  > main
    max-width 800px
    width 100%
    margin 2em auto
    display flex
    flex-grow 1
    flex-direction column

    > header
      h1
        margin 0
        display flex
      .right
        display flex
        margin-left auto
        justify-content center
        align-items center
        > a
          margin-left 0.5em

    #list
      margin 2em 0

  > footer
    text-align center

article.summary
  border-left 2px solid var(--foreground, foreground)
  margin 1em 0
  padding 1em
  header
    display flex
    flex-direction row
    > h3
      margin-top 0
    a
      font-weight 500
    .right
      margin-left auto
  main
    margin 1em 0 0 0