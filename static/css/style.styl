@import "typography.styl"
@import "variables.styl"
@import "components/code.styl"

@import "components/pagination.styl"
@import "components/card.styl"
@import "grid/grid.styl"

.fade
  color var(--foreground-05, rgba(foreground, 0.5))

div.asciicast
  display flex !important
  iframe
    margin 2em auto !important

table:not(.highlight)
  width 75%
  margin 2em auto
  tr
    border-bottom 1px solid var(--foreground-03, rgba(foreground, 0.3))
    td, th
      padding 0.5em 1em

.tag
  &.draft
    color red
    background-color transparent
    border-color red
    margin-left 0.5em
  text-decoration none
  padding 0 0.2em
  border 1px solid var(--foreground, foreground)
  font-weight 500

.tags
  margin 0 0.5em

hr
  width 100%
  border-style none
  border-bottom 1px solid var(--foreground, foreground)

body
  font-size font-size
  min-height 100vh
  box-sizing border-box

  > header
    display flex
    > a
      @media screen and (min-width: 800px)
        margin 4rem auto 1rem auto
      @media screen and (max-width: 799px)
        margin 0 auto 1rem auto
      > h1
        text-align center
        padding 0.1em 0.4em
        margin 0
        user-select: none

  > nav
    margin 1em
    display flex
    justify-content center

    > a
      margin 0 1em
      padding 0.1em 0.4em
      font-size 1.5em
      user-select: none

  > main
    display flex
    flex-grow 1
    flex-direction column
    max-width 800px
    margin 0 auto

    > header
      h1
        margin 0
        display flex
      .right
        display flex
        margin-left auto
        justify-content center
        align-items center
        > a
          margin-left 0.5em

  > footer
    text-align center
    padding 2rem 0
    .contact
      font-size 2em
      margin 0 0 1.5em 0
      a
        text-decoration none

article.summary
  border-left 2px solid var(--foreground, foreground)
  margin 1em 0
  padding 1em
  header
    display flex
    flex-direction row
    > h3
      margin-top 0
    a
      font-weight 500
    .right
      margin-left auto
  main
    margin 1em 0 0 0

main > section
  padding: 1em
  > header
    font-size: 1.5em;
    font-weight: bold

main.cv
  > #information, #skills
    background-color foreground
    color background
    a
      color background
  > #information
    display flex
    flex-direction column
    align-items center
    justify-content center
    padding 4em 0
    text-align center
  > #letter > p:first-child
    margin 0

section#skills
  display flex
  align-items center
  justify-content center
  >ul
    padding: 0
    display flex
    flex-wrap wrap
    >li
      list-style none
      padding 0 0.5em